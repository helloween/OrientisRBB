%table#t1{:width => '90%'}
  %tr#shapka
    %th{:width => '100%', :height => '10%', :align => 'left'}
      %span#table_title
        =t(:change_password)
    %tr 
      %th#title{:width => '100%', :height => '30%', :align => 'left'}
        -form_tag 'change_pass' do
          -field_set_tag t(:enter_and_confirm), {:id => 'change_pass_field'} do
            .formError
              =error_message_on 'usr','old_passwd', :css_class => 'inform_mess'
            #custom_param
              %span
                =label_tag t(:old_password)
              #custom_change_pass
                =password_field_tag "users[old_passwd]",nil,:size => 30   
            %br
            .formError
              =error_message_on 'usr','passwd', :css_class => 'inform_mess'
            #custom_param
              %span
                =label_tag t(:new_password)
              #custom_change_pass
                =password_field_tag "users[passwd]",nil,:size => 30
                %span
                  =label_tag t(:confirm_password)
                =password_field_tag "users[passwd_confirmation]",nil, :size => 30
          =submit_tag(t(:save))
          &nbsp;&nbsp;&nbsp;
          =link_to t(:back), :back